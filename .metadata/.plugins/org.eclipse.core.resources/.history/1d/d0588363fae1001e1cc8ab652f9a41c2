import java.io.File;
import java.io.IOException;

public class LaunchFile {
	
	public static void main(String args[])
	{
		String path1="D:\\IOtest\\bye.txt";
		File f1=new File("D:\\IOtest\\bye.txt");
		File f2=new File("D:\\IOtest\\sample.txt");
		System.out.println(f1.exists());//to check an file exist or not 
		System.out.println(f2.exists());
		
		try {
			f2.createNewFile();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		System.out.println(f2.exists());
	}
	
	//creating a New directory/folder in a location

}
